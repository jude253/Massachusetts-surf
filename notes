#database table setup

CREATE TABLE reqdata (
spot_id int(4) NOT NULL,
orderid int(2) NOT NULL,
times TIMESTAMP NOT NULL,
solidRating INT(1),
fadedRating INT(1),

minBreakHeight DECIMAL(5,2),
maxBreakHeight DECIMAL(5,2),
height DECIMAL(5,1),
period INT(2), 
swellDir DECIMAL(5,2),
swellCompDir VARCHAR(3),
swellUnit VARCHAR(3),

windSpeed INT(2),
windDir DECIMAL(5,2),
windCompDir VARCHAR(3),
windGusts INT(2),
windUnit VARCHAR(3),
PRIMARY KEY(spot_id,orderid)
);



$spot_id
$order_id
$times
$solidRating
$fadedRating
        
$absMinBreakingHeight #2decimals
$absMaxBreakingHeight
$height
$period
$swellDir #6 spots
$swellCompDir
$swellUnit


$windSpeed
$windDir #6 spots
$windCompDir
$windGusts
$windUnit




DROP TABLE reqdata

CREATE TABLE spotnames (
spotname VARCHAR(25) NOT NULL,
state VARCHAR(2) NOT NULL,
spot_id INT(4) NOT NULL,
PRIMARY KEY(spot_id)
);

